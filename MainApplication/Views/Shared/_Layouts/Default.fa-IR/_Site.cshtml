<!DOCTYPE html>

<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	<title>Dtx Workflow Engine - @ViewBag.Title</title>

	<link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
	<link href="~/Content/Site.css" rel="stylesheet" type="text/css" />

	@RenderSection(name: "StyleSheetExceptions", required: false)

	<script src="~/scripts/modernizr-2.8.3.js"></script>
	<script src="~/scripts/jquery-3.1.0.min.js"></script>
	<script src="~/Scripts/bootstrap.min.js"></script>

	@RenderSection(name: "JavaScriptExceptions", required: false)
</head>

<body>
	<div class="navbar navbar-inverse navbar-fixed-top">
		<div class="container">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				@Html.ActionLink("Dtx Workflow Engine!", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
			</div>
			<div class="navbar-collapse collapse">
				<ul class="nav navbar-nav"></ul>
			</div>
		</div>
	</div>

	<div class="container body-content">
		<hr />
		@RenderBody()
		<hr />
		<footer>
			<p>&copy; @DateTime.Now.Year - Mr. Dariush Tasdighi - DariushT@GMail.com - +98-912-108-7461</p>
		</footer>
	</div>
</body>
</html>
